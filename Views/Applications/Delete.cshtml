@* 
    <summary>
    View for confirming the deletion of an application. 
    Displays key details such as cover letter, submission date, project title, and freelancer email.
    If the user confirms, the application is deleted via POST to the Delete action.
    </summary>
*@

@model ClientConnect.Models.Application

@{
    ViewData["Title"] = "Delete Application";
}

<h1>Delete Application</h1>

<h3>Are you sure you want to delete this application?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Cover Letter</dt>
        <dd class="col-sm-10">@Model.CoverLetter</dd>

        <dt class="col-sm-2">Submitted At</dt>
        <dd class="col-sm-10">@Model.SubmittedAt</dd>

        <dt class="col-sm-2">Project</dt>
        <dd class="col-sm-10">@Model.ProjectListing?.Title</dd>

        <dt class="col-sm-2">Freelancer</dt>
        <dd class="col-sm-10">@Model.Freelancer?.Email</dd>
    </dl>
</div>

@* Delete confirmation form with hidden input for ID *@
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
