@*
    Summary:
    View: Delete.cshtml
    Purpose: Confirms the deletion of a specific project listing by displaying its details.
    Model: ProjectListing — includes properties such as Title, Description, Budget, and ClientName.
    Features:
    - Displays full project details for confirmation
    - Hidden input passes the project ID to the controller for deletion
    - Bootstrap styling for layout and user interface
*@

@model ClientConnect.Models.ProjectListing

@{
    ViewData["Title"] = "Delete Project";
}

<h2>Delete Project</h2>

<!-- Confirmation message -->
<h4>Are you sure you want to delete this project?</h4>
<hr />

<!-- Display project details in a definition list -->
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Budget</dt>
    <dd class="col-sm-10">@Model.Budget.ToString("C")</dd>

    <dt class="col-sm-2">Client</dt>
    <dd class="col-sm-10">@Model.ClientName</dd>
</dl>

<!-- Form to confirm deletion -->
<form asp-action="Delete">
    <!-- Hidden field to pass project ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Submit and cancel buttons -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
