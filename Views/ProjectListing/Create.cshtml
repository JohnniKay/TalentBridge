@model ClientConnect.Models.ProjectListing

@{
    @*
    Summary:
    View: Create.cshtml
    Purpose: Renders a form to allow clients to create a new project listing.
    Model: ProjectListing — includes properties such as Title, Description, Budget, and ClientName.
    Features:
    - Bootstrap styling for layout and responsiveness
    - Built-in model validation using tag helpers
    - Client-side validation script included in Scripts section
    *@

    ViewData["Title"] = "Create Project Listing";
}

<h1 class="mb-4">Create New Project</h1>

<!-- Project creation form -->
<form asp-action="Create" method="post">

    <!-- Project title field -->
    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label fw-bold"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Project description textarea -->
    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Project budget field (numeric) -->
    <div class="form-group mb-3">
        <label asp-for="Budget" class="form-label fw-bold"></label>
        <input asp-for="Budget" class="form-control" type="number" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>

    <!-- Client name field -->
    <div class="form-group mb-3">
        <label asp-for="ClientName" class="form-label fw-bold"></label>
        <input asp-for="ClientName" class="form-control" />
        <span asp-validation-for="ClientName" class="text-danger"></span>
    </div>

    <!-- Submit and cancel buttons -->
    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">Submit Project</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<!-- Include client-side validation scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
