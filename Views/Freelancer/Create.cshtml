@*
    <summary>
    Displays a form to add a new freelancer to the system.
    Binds to the Freelancer model and posts data to the Create action in the FreelancersController.
    </summary>
*@

@model ClientConnect.Models.Freelancer

@{
    // Set the title for the view
    ViewData["Title"] = "Add Freelancer";
}

<h1>Add Freelancer</h1>

<!-- Form for submitting a new Freelancer to the controller -->
<form asp-action="Edit" method="post">
    @* Show all validation errors *@
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <!-- Hidden field for ID (required to identify the record being updated) -->
    <input type="hidden" asp-for="Id" />

    <!-- Name input -->
    <div class="mb-1">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Skills input -->
    <div class="mb-1">
        <label asp-for="Skills" class="form-label"></label>
        <input asp-for="Skills" class="form-control" />
        <span asp-validation-for="Skills" class="text-danger"></span>
    </div>

    <!-- Email input -->
    <div class="mb-1">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Phone number input -->
    <div class="form-group mb-1">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <!-- Experience input -->
    <div class="form-group mb-1">
        <label asp-for="ExperienceYears" class="form-label"></label>
        <input asp-for="ExperienceYears" class="form-control" type="number" />
        <span asp-validation-for="ExperienceYears" class="text-danger"></span>
    </div>

    <!-- IsAvailable input -->
    <div class="form-group mb-1">
        <label asp-for="IsAvailable" class="form-label"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <!-- Bio input -->
    <div class="form-group mb-1">
        <label asp-for="Bio" class="form-label"></label>
        <textarea asp-for="Bio" class="form-control"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>    
    
    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary mt-2">Add Freelancer</button>
</form>

<!-- Link to go back to the Freelancer Index page -->
<div class="mt-2">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
